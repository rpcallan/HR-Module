        <name>Location onChange</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
	if (isLoading || newValue === '') {
		setDisplay(oldValue);
		return;
	}
	setDisplay(newValue);
}

function setDisplay(newValue){
	var ga = new GlideAjax('SISK_HR_Contract');
	ga.addParam('sysparm_name', 'getLocationAddress');
	ga.addParam('sysparm_id', newValue);
	ga.getXML(locationAddress);	
}

function locationAddress(response){
	//set the delivery address based on location
	var location = response.responseXML.documentElement.getAttribute("answer");
	g_form.setValue('delivery_address', location);
}]]></script>
