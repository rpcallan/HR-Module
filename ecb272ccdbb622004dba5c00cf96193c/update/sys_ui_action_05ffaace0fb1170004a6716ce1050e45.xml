<?xml version="1.0" encoding="UTF-8"?><record_update sys_domain="global" table="sys_ui_action">
    <sys_ui_action action="INSERT_OR_UPDATE">
        <action_name/>
        <active>true</active>
        <client>false</client>
        <comments>User this buton to switch between Last Work Date and Last date in Employment</comments>
        <condition>current.last_date_of_work != current.last_date_of_employment</condition>
        <form_action>true</form_action>
        <form_button>true</form_button>
        <form_context_menu>false</form_context_menu>
        <form_link>false</form_link>
        <form_style/>
        <hint/>
        <list_action>false</list_action>
        <list_banner_button>false</list_banner_button>
        <list_button>false</list_button>
        <list_choice>false</list_choice>
        <list_context_menu>false</list_context_menu>
        <list_link>false</list_link>
        <list_save_with_form_button>false</list_save_with_form_button>
        <list_style/>
        <name>Switch Leaving Date</name>
        <onclick/>
        <order>500</order>
        <script><![CDATA[//swap leaving from last date in employment to last day in work or visa versa
if(current.leaving_date == current.last_date_of_work){
	current.leaving_date = current.last_date_of_employment;
} else {
	current.leaving_date = current.last_date_of_work;
}

//update related request item
var req_item = new GlideRecord('sc_req_item');
req_item.get(current.request_item);
req_item.due_date = current.leaving_date;
req_item.worknotes = 'Due date changed from Leaver Request ' + current.number;
req_item.update();

current.update();
action.setRedirectURL(current);]]></script>
